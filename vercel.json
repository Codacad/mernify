{
    "version": 2,
    "rewrites": [{ "source": "/(.*)", "destination": "/" }],
    "builds": [
      {
        "src": "frontend/dist/**/*",
        "use": "@vercel/static"
      },
      {
        "src": "backend/index.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/backend/index.js"
      },
      {
        "src": "/(.*)",
        "dest": "/frontend/dist/$1"
      }
    ]
  }
  